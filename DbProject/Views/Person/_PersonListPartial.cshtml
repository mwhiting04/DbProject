@model PagedList.IPagedList<DbProject.Models.BusinessEntity>
@using PagedList.Mvc;
@using PagedList;


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("ID", "Index", new { sortOrder = ViewBag.IdSortParm, page = ViewBag.CurrentPage }, new { @class = "sort-link", data_sort = "Id" })
            </th>
            <th>
                @Html.ActionLink("Title", "Index", new { sortOrder = ViewBag.TitleSortParm, page = ViewBag.CurrentPage }, new { @class = "sort-link", data_sort = "Title" })
            </th>
            <th>
                @Html.ActionLink("First Name", "Index", new { sortOrder = ViewBag.FirstNameSortParm, page = ViewBag.CurrentPage }, new { @class = "sort-link", data_sort = "FirstName" })
            </th>
            <th>
                @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.LastNameSortParm, page = ViewBag.CurrentPage }, new { @class = "sort-link", data_sort = "LastName" })
            </th>
            <th>
                @Html.ActionLink("Modified Date", "Index", new { sortOrder = ViewBag.ModifiedDateSortParm, page = ViewBag.CurrentPage }, new { @class = "sort-link", data_sort = "ModifiedDate" })
            </th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            var person = Model[i];
            var rowClass = i % 2 == 0 ? "even-row" : ""; // Apply class to every other row
            <tr class="selectable-row @rowClass" data-id="@person.BusinessEntityID">
                <td>@Html.DisplayFor(modelItem => person.BusinessEntityID)</td>
                <td>@Html.DisplayFor(modelItem => person.Person.Title)</td>
                <td>@Html.DisplayFor(modelItem => person.Person.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => person.Person.LastName)</td>
                <td>@Html.DisplayFor(modelItem => person.Person.ModifiedDate)</td>
                <td>
                    <button class="btn btn-info details-button" data-toggle="modal" data-target="#detailsModal" data-id="@person.BusinessEntityID">
                        Details
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page, sortOrder = ViewBag.CurrentSort }))
</div>

